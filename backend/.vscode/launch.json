    "version": "0.2.0",
    "configurations": [
        {
            "name": "RunServer: API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": false
        },
        {
          "name": "Test",
          "type": "python",
          "request": "test",
          "console": "internalConsole",
          "justMyCode": false
        },
        {
            "name": "Debug: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "port": 5678,
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/app"
              }
            ]
        }
    ]
}
